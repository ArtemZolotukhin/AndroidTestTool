<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">



    <TextView
        android:id="@+id/param_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:textColor="#FFF"
        android:layout_toEndOf="@+id/param_bar"
        android:layout_toStartOf="@+id/param_check"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/param_bar"
        />

    <SeekBar
        android:id="@+id/param_bar"
        android:layout_width="250dp"
        android:maxHeight="3dp"
        android:minHeight="3dp"
        android:max="10"
        android:layout_height="wrap_content"
        android:layout_below="@+id/param_name"
        android:progressDrawable="@drawable/rate_bar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:thumbTint="#FFF"
        />

    <CheckBox
        android:id="@+id/param_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/param_bar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:buttonTint="#FFF"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF"/>


</RelativeLayout>