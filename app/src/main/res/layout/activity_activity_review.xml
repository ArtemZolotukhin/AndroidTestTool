<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rz.apptesttool.view.ActivityReviewActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:id="@+id/tv_activity_name"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_criterions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_criterion"
        android:layout_below="@+id/tv_activity_name"
        android:layout_above="@+id/tv_label2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_criterions"
        android:id="@+id/tv_label2"
        android:text="@string/you_can_write_a_short_review"
        android:layout_above="@+id/et_review"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_review"
        android:layout_above="@+id/ll_button_box"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_button_box"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:id="@+id/btn_cancel"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:id="@+id/btn_confirm"/>
    </LinearLayout>



</RelativeLayout>
